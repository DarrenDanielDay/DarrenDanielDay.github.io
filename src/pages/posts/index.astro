---
import Card from "../../components/Card.astro";
import Classic from "../../layouts/Classic.astro";
import type { MyFrontMatter } from "../../scripts/util";
const posts = await Astro.glob<MyFrontMatter>("../posts/*/index.mdx");
---

<Classic title="全部博客">
  {
    posts
      .sort((a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime())
      .map((post) => <Card href={post.url ?? "/"} body={post.frontmatter.description} title={post.frontmatter.title} />)
  }
</Classic>

<style lang="scss">
  :global(main) {
    padding: 1.5em;
  }
</style>
