---
import { assets, forwardProps } from "../scripts/util";

export interface Props extends astroHTML.JSX.ImgHTMLAttributes {
  url?: string;
}
const { url = assets("DarrenDanielDay.jpg"), alt = url.split("/").at(-1), ...others } = Astro.props;
const rest = forwardProps(others, { class: "avatar" });
---

<img src={url} alt={alt} {...rest} />

<style lang="scss">
  img.avatar {
    border-radius: 50%;
    height: 2em;
    display: inline-block;
  }
</style>
