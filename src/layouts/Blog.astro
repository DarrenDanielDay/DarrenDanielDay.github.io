---
import type { MyFrontMatter } from "../scripts/util";
import Classic from "./Classic.astro";
export interface Props {
  frontmatter: MyFrontMatter;
}

const { frontmatter } = Astro.props;
---

<Classic {...frontmatter}>
  <article class="markdown-body">
    <slot />
  </article>
</Classic>
<style lang="scss" is:global>
  @import "../styles/theme.scss";
  .markdown-body {
    margin: 1em 2em;
    padding: 1em 2em;
  }
  @include when-light-on() {
    @import "github-markdown-css/github-markdown-light";
  }
  @include when-light-off() {
    @import "github-markdown-css/github-markdown-dark";
  }
  img {
    width: fit-content;
    height: fit-content;
    object-fit: contain;
  }
</style>
