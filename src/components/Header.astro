---
import { constants } from "../scripts/util";
import AssetsIcon from "./AssetsIcon.astro";
import Avatar from "./Avatar.astro";
import type { LinkProps } from "./Link.astro";
import Link from "./Link.astro";
import ToggleButton from "./ToggleButton.astro";
const path = Astro.url.pathname;
const fragments = path
  .split("/")
  .slice(1)
  .filter((p) => !!p);
const validParts = fragments.join("/");
const fileSubPath = (() => {
  if (fragments[0] === "posts") {
    if (fragments.length > 1) {
      return `${validParts}/index.mdx`;
    }
  }
  return `${validParts}/index.astro`;
})();
const links: LinkProps[] = [
  {
    title: "关于",
    href: "/about",
  },
];
const githubSource = `https://github.com/${constants.DarrenDanielDay}/${constants.DarrenDanielDay}.github.io/tree/remake/src/pages/${fileSubPath}`;
---

<header>
  <div class="sm dropdown-host nav-item">
    <ToggleButton normalIcon="menu" checkedIcon="arrow-up" style="position: absolute; top: 1em; left: 1em;"  class="dropdown-menu-btn" title="side menu" />
    <aside class="dropdown-items">
      <ul>
        <li>
          <Link href={`/${fragments.slice(0, fragments.length - 1).join("/")}`} title="返回上层" />
        </li>
        {
          links.map((link) => (
            <li>
              <Link {...link} />
            </li>
          ))
        }
      </ul>
    </aside>
  </div>
  <nav class="normal">
    <ol>
      <li>
        <Link href="/">
          <Avatar />
        </Link>
      </li>
      {
        fragments.map((fragment, i) => (
          <li>
            <Link href={`/${fragments.slice(0, i + 1).join("/")}`}>{fragment}</Link>
          </li>
        ))
      }
    </ol>
  </nav>
  <div class="center">
    <div class="center normal">
      <ul>
        {
          links.map((link) => (
            <li>
              <Link {...link} />
            </li>
          ))
        }
      </ul>
    </div>
    <div class="nav-item center">
      <a href={githubSource} title="在GitHub上查看本页面源码" target="_blank">
        <AssetsIcon path="logos/github.svg" />
      </a>
    </div>
  </div>
</header>

<style lang="scss">
  @import "../styles/utils.scss";
  header {
    z-index: 1;
    position: sticky;
    --header-hight: 4em;
    top: 0;
    background-color: var(--bg-main);
    border-bottom: 0.05em var(--bd) solid;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15), inset 0 -1px 0 rgba(0, 0, 0, 0.15);
    ol,
    ul {
      list-style-type: none;
      li::marker {
        display: none;
      }
    }
    display: flex;
    justify-content: space-between;
    align-items: center;

    .sm {
      display: none !important;
      @include sm() {
        display: inline-flex !important;
      }
    }
    .normal {
      display: inline-flex;
      @include sm() {
        display: none !important;
      }
    }

    .nav-item {
      display: inline-flex;
      width: var(--header-hight);
      height: var(--header-hight);
      :global(.icon-root) {
        width: 2em;
        height: 2em;
      }
    }

    nav {
      padding: 0 2em;
      margin: 0;
      display: inline-flex;
      align-items: center;
      height: var(--header-hight);
      ol {
        padding-left: 0;
        display: inline-flex;
        align-items: center;
        li {
          display: inline-flex;
          align-items: center;
          &:not(:last-child) a::after {
            display: inline-block;
            content: "/";
            margin: 0 0.5em;
          }
        }
      }
    }
    .dropdown-host {
      .dropdown-items {
        background-color: var(--bg-main);
        transition: all 0.3s ease;
        position: absolute;
        overflow: hidden;
        opacity: 0;
        transform: translateY(-100%);
        width: 100%;
        li :global(a) {
          padding: 0 2em;
          width: 100%;
          display: inline-flex;
          align-items: center;
          height: var(--header-hight);
        }
      }
      .dropdown-menu-btn {
        background-color: transparent;
        opacity: 0;
        cursor: pointer;
        border: none;
        &:is(:checked) {
          ~ .dropdown-items {
            transform: translateY(var(--header-hight));
            opacity: 1;
          }
        }
      }
    }
  }
</style>
