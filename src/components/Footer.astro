---
import { query } from "../scripts/util";
const currentYear = new Date().getFullYear();
const { assets } = query(Astro);
const github = await assets("logos/github.svg").text();
const facebook = await assets("logos/facebook.svg").text();
const twitter = await assets("logos/twitter.svg").text();
---

<footer>
  <p>
    &copy; {currentYear} DarrenDanielDay. All rights reserved.
  </p>
  <p>
    <a
      href="https://github.com/DarrenDanielDay"
      target="_blank"
      title="Darren Daniel Day's github index"
      set:html={github}
    >
    </a>
    <a
      href="https://twitter.com/DarrenDanielDay"
      target="_blank"
      title="Darren Daniel Day's twitter index"
      set:html={twitter}
    >
    </a>
    <a
      href="https://www.facebook.com/people/Darren-Daniel-Day/100085674364454/"
      target="_blank"
      title="Darren Daniel Day's facebook index"
      set:html={facebook}
    >
    </a>
  </p>
  <p class="support">
    Powered by <a href="https://astro.build" title="astro" target="_blank">
      <img src="/assets/logos/astro-logo-light.svg" class="light" alt="astro-logo-light.svg" />
      <img src="/assets/logos/astro-logo-light.svg" class="dark" alt="astro-logo-dark.svg" />
    </a>
  </p>
</footer>

<style lang="scss">
  footer {
    padding: 1.25em 2em;
    bottom: 0;
    border-top: 0.05em rgba(15, 23, 42, 0.3) solid;
    display: flex;
    gap: 0.5em;
    align-items: center;
    flex-wrap: wrap;
    p {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      &.support {
        gap: 0.5em;
        justify-self: flex-end;
      }
    }
    a {
      margin: 0 0.5em;
      :global(svg) {
        width: 2em;
      }
    }
    img {
      height: 1em;
      width: fit-content;
      transform: translateY(0.25em);
    }
  }
</style>
